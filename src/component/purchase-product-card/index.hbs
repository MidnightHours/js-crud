{{#with data}}
<div class="product-card">
    <img src="{{img}}" alt="product photo" class="product-card__image">
    <h2 class="product-card__title">{{title}}</h2>
    <div class="product-card__description">{{description}}</div>

    {{#each category}}
    <a href="#{{id}}" class="product-card__category product-card__category--{{id}}">{{text}}</a>
    {{/each}}
    <a class="product-card__button" href="/purchase-product?id={{id}}">Купити зараз: {{price}} грн</a>

</div>
{{/with}}