{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>
  <section>
    {{#with data}}
    <form method="POST" action="/purchase-submit?id={{id}}" class="purchase-card">
      {{> heading title="Ваше замовлення"}}
      <ul class="cart">
        {{#each cart}}
        <li class="cart__item">
          <span>{{text}}</span>
          <span>{{price}}₴</span>
        </li>
        {{/each}}
      </ul>

      {{> heading title="Оформлення замовлення"}}


      {{> field label="Ім'я" name="firstname" }}
      {{> field label="Прізвище" name="lastname" }}
      {{> field label="Телефон" name="phone" }}
      {{> field label="Пошта" name="email" }}
      {{> field label="Коментар" name="comment" }}
      {{> field label="Списати бонус" name="bonus" }}
      {{> field label="Промо-код" name="promocode"}}

      {{!-- Дані поля не видно на сторінці, вони технічні, щоб передати значення в ендпоїнт --}}
      {{> field value=totalPrice name="totalPrice" disabled=true}}
      {{> field value=productPrice name="productPrice" disabled=true}}
      {{> field value=deliveryPrice name="deliveryPrice" disabled=true}}
      {{> field value=amount name="amount" disabled=true}}
      {{!-- ===================================== --}}

      <strong class="purchase-card__total">Всього: {{totalPrice}} грн ({{bonus}} грн бонусів нараховано)</strong>


      <button type="submit" class="purchase-card__button">Оформити замовленя</button>

    </form>

    {{/with}}




  </section>
</main>

