{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<main>
  <section>
    {{#with data.product}}
    <div class="form">
      <h1 class="form__title">Оновити пошту користувача</h1>
      <form method="POST" action="/product-edit">

        <div class="form__content">
          <h2 class="form__content_title">Інформація про товар</h2>

          <div class="form__item1">
            <div class="form__field">
              <label for="name" class="form__label">Назва товару</label>
              <input placeholder="{{name}}" type="name" name="name" class="form__input">
            </div>
            <div class="form__field">
              <label for="price" class="form__label">Ціна</label>
              <input placeholder="{{price}}" type="price" name="price" class="form__input">
            </div>
            <div class="form__field">
              <label for="id" class="form__label">ID</label>
              <input value="{{id}}" readonly type="id" name="id" class="form__input">
            </div>
          </div>
          <div class="form__field form__item2">
            <label for="description" class="form__label">Короткий опис товару</label>
            <input placeholder="{{description}}" type="description" name="description" class="form__input">
          </div>

          <div class="form__item3">
            <button class="form__button button_add">Відправити</button>
            <a href="/product-delete?id={{id}}" class="form__button button_delete">Видалити</a>
          </div>
        </div>

      </form>

    </div>
    {{/with}}
  </section>
</main>

